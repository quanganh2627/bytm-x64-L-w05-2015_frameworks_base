<!-- INTEL_LPAL: This is the screen that allows the user to unlock by speaking a password. -->
<com.android.keyguard.KeyguardVoiceUnlockView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyguard_voice_unlock_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    androidprv:layout_maxHeight="@dimen/keyguard_security_height"
    androidprv:layout_maxWidth="@dimen/keyguard_security_width"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/keyguard_message_area" />

    <FrameLayout
        android:id="@+id/keyguard_bouncer_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22CCCCCC" >

            <ImageView
                android:id="@+id/vu_icon"
                android:layout_width="120dip"
                android:layout_height="120dip"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_voice_unlock_wave" />

            <ImageButton
                android:id="@+id/vu_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:paddingBottom="32.0dip"
                android:paddingLeft="32.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:scaleType="center"
                android:src="@drawable/ic_facial_backup" />

            <TextView
                android:id="@+id/vu_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/vu_icon"
                android:layout_centerHorizontal="true"
                android:focusable="false"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vu_speak_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vu_icon"
                android:layout_centerHorizontal="true"
                android:focusable="false"
                android:singleLine="true"
                android:text="@string/vu_speak_password_string"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/vu_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:layout_alignLeft="@id/vu_speak_password"
                android:layout_alignRight="@id/vu_speak_password"
                android:layout_below="@id/vu_speak_password" />
        </RelativeLayout>
    </FrameLayout>

    <include
        android:id="@+id/keyguard_selector_fade_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        layout="@layout/keyguard_eca"
        android:gravity="center_horizontal"
        android:orientation="vertical" />

</com.android.keyguard.KeyguardVoiceUnlockView>