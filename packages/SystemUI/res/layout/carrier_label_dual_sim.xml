<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carrier_label_combo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/close_handle_height"
    android:gravity="bottom|center"
    android:visibility="gone"
    >
    <com.android.systemui.statusbar.phone.CarrierLabel
        android:id="@+id/carrier_label_sim1"
        android:textAppearance="@style/TextAppearance.StatusBar.Expanded.Network"
        android:layout_height="@dimen/carrier_label_height"
        android:layout_width="wrap_content"
        />

     <TextView
        android:id="@+id/carrier_label_splitter"
        android:textAppearance="@style/TextAppearance.StatusBar.Expanded.Network"
        android:layout_height="@dimen/carrier_label_height"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <com.android.systemui.statusbar.phone.CarrierLabel
        android:id="@+id/carrier_label_sim2"
        android:textAppearance="@style/TextAppearance.StatusBar.Expanded.Network"
        android:layout_height="@dimen/carrier_label_height"
        android:layout_width="wrap_content"
        />
</LinearLayout>
